#set ($title = $messages.get("profile.title"))

#set ($head1 = '<script src="/static/js/cms/profile.js" type="text/javascript"></script>')   

<div id="tabs">

    <ul>
        <li><a href="#tab-1">$messages.get("profile.title")</a></li>
    </ul>
    <div id="tab-1">

        <div class="form-row">
            <label>$messages.get("profile.username")</label>
            <input id="name" type="text" />
        </div>

        <div class="form-row">
            <label>$messages.get("profile.user_email")</label>
            <input id="email" type="text" disabled="disabled"/>
        </div>

        <div class="form-row">
            <label>$messages.get("password")</label>
            <input id="password1" type="password" />
        </div>
        <div class="form-row">
            <label>$messages.get("profile.retype_password")</label>
            <input id="password2" type="password" />
        </div>

        <div class="form-row">
            <label>$messages.get("profile.timezone")</label>
            <select id="timezone"></select>
        </div>

        <div class="buttons">
            <input id="saveButton" type="button" value="$messages.get("save")" />
        </div>

    </div>

</div>

